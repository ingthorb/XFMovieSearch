<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XFMovieSearch"
             x:Class="XFMovieSearch.MovieSearchXF"
             Title="Movie Search">
  
<StackLayout VerticalOptions = "Center"
             Spacing="20"
             BackgroundColor ="White"
             Margin="30">
  
  <Label x:Name="EnterMovieLabel"
         FontSize="30"
         Text="Search for a movie!"
         TextColor="Black"
         FontFamily="Helvetica"
         FontAttributes="Bold"/>
  
  <Entry x:Name="MainEntry"
         BackgroundColor ="White"
         Placeholder="Forrest Gump...."
         PlaceholderColor="#FFFAF0"
         TextColor="Black"/>
  
<Button Clicked="Button_OnClicked"
        Text="Search"
        HorizontalOptions ="LayoutOptions.Fill"
        BackgroundColor="#FFA500"
        TextColor="Black"/>
  
  <Label x:Name="MovieLabel"
         FontSize="25"
         TextColor ="Black"
         FontFamily="Helvetica"
         FontAttributes="Bold"/>
  
  <ActivityIndicator x:Name="_indicator"
                     Color="Red"
                     IsRunning="false"/>

</StackLayout> 

</ContentPage>